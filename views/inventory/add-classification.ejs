  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
  <% } %>
</div>

<div class="login-container">
    <form action="./add-classification" method="post">
      <h1 class="form-header">Add Classification</h1><br>
      <label for="classificationName" >Class Name:</label><br>
      <input type="text" name="classification_name" id="classificationName" placeholder=" Ex. SUV" required value="<%= locals.classification_name %>"><br><br>
      <button type="submit">Add Class</button>
    </form>
  </div>